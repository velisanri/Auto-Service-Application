<div class="container d-flex flex-column justify-content-center align-items-center" style="height: 50vh;">
    <!-- Başlık -->
    <h1 class="mb-4">Sanrı Otomotiv Destek Bölümü</h1>

    <!-- Buton -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        <div>
            <h5>İletişim'e geçmek için tıklayınız.</h5>
        </div>
    </button>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Bilgilerinizi Giriniz</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="ContactKayit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Adi" class="control-label"></label>
                        <input asp-for="Adi" class="form-control" required />
                        <span asp-validation-for="Adi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Soyadi" class="control-label"></label>
                        <input asp-for="Soyadi" class="form-control" required />
                        <span asp-validation-for="Soyadi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TcNo" class="control-label"></label>
                        <input asp-for="TcNo" class="form-control" />
                        <span asp-validation-for="TcNo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Adres" class="control-label"></label>
                        <input asp-for="Adres" class="form-control" />
                        <span asp-validation-for="Adres" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefon" class="control-label"></label>
                        <input asp-for="Telefon" class="form-control" required />
                        <span asp-validation-for="Telefon" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Notlar" class="control-label"></label>
                        <input asp-for="Notlar" class="form-control" />
                        <span asp-validation-for="Notlar" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AracId" class="control-label"></label>
                        <select asp-for="AracId" class="form-select" asp-items="ViewBag.AracId"></select>
                        <span asp-validation-for="AracId" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <input type="submit" value="Gönder" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

